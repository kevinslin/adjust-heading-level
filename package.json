{
  "name": "adjust-heading-level",
  "displayName": "Adjust Heading Level",
  "description": "A VSCode extension to adjust the heading level of the selected text",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.increaseHeading",
        "title": "Increase Heading Level"
      },
      {
        "command": "extension.decreaseHeading",
        "title": "Decrease Heading Level"
      },
      {
        "command": "extension.setHeading",
        "title": "Set Heading Level"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.62.0",
    "@vscode/test-electron": "^2.3.2",
    "glob": "^10.2.6",
    "mocha": "^9.1.3",
    "typescript": "^4.5.2"
  }
}
